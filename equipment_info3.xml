<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 첫 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine0"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press10" />

                <!-- 첫 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="다리를 벌리고 앉아 핸들을 잡고 패드에 등을 고정해주세요. 몸통이 흔들리지 않도록 코어에 힘을 주고 다리를 안쪽으로 모아줍니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 두 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine1"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press11" />

                <!-- 두 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="자신에게 맞는 무게를 설정한 후 팔 힘으로 밀어낼 때 호흡을 내쉬고, 내릴 때 호흡을 들이 마십니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 3 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 3 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine2"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press12" />

                <!-- 3 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="가슴을 닫을 때 호흡을 내쉬고, 가슴을 열 때 호흡을 들이 마십니다. 가슴을 닫고 1초 정도 유지한 후 다시 반복합니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 4 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 4 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine3"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press13" />

                <!-- 4 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="올라가면서 호흡을 내쉬고, 내려올 때 호흡을 들이 마십니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 5 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 5 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine4"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press9" />

                <!-- 5 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="밑 부분 발패드에 발목을 걸고 허벅지가 윗부분 패드에 평평하게 닿도록 합니다. 팔을 x자 모양으로 겹쳐 가슴에 붙이고 허리를 일자로 핍니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
