<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 첫 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine0"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press" />

                <!-- 첫 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="벤치프레스는 가슴근육을 발달시키는 운동입니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 두 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine1"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press1" />

                <!-- 두 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="체스트 프레스를 할 때는 기구를 밀었다가 가슴의 힘으로 버티면서 제자리로 오는 것을 반복한다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 3 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 3 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine2"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press2" />

                <!-- 3 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="레그프레스 운동은 대퇴사두근, 대둔근, 대퇴 후면 근육 등 하체의 다양한 근육을 발전시켜 줍니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 4 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 4 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine3"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press3" />

                <!-- 4 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="발끝을 벌리고 무릎이 바깥쪽으로 가게 스쿼드 할 것을 추천합니다 앞으로 나간 발 무릎이 안쪽으로 가게면 무릎 인대에 무리를 주게되니 이또한 유의하여 무릎을 바깥으로 내도록 합니다."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 5 번째 기구 이미지와 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- 5 번째 기구 이미지 -->
                <ImageView
                    android:id="@+id/machine4"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:src="@drawable/press4" />

                <!-- 5 번째 기구 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="상완이두근 자극 운동입니다. 운동 수행시 최대한 팔꿈치가 움직이지 않는선에서 수축 이완 하여 동작을 진행하여 주세요"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
